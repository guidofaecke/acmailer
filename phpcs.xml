<?xml version="1.0"?>
<ruleset name="Coding standard specification">
    <description>Coding standard specification</description>

    <!-- display progress -->
    <arg value="p" />
    <arg name="colors" />

    <!-- inherit rules from: -->
    <rule ref="LaminasCodingStandard"/>

    <!-- Paths to check -->
    <file>config</file>
    <file>src</file>
    <file>test</file>

    <exclude-pattern>config/mail.global.php</exclude-pattern>

    <rule ref="WebimpressCodingStandard.NamingConventions.AbstractClass.">
        <exclude name="WebimpressCodingStandard.NamingConventions.AbstractClass.Prefix" />
    </rule>
</ruleset>
